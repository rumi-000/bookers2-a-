
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image(50,50) %>
          <% end %></td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td>閲覧数：<%= book.read_counts.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
