<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>

      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @book %>
    </div>


    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to image_tag(@user.get_profile_image(50,50)), user_path(@user) %>
            <br><%= link_to @user.name, user_path(@user) %></td>
            <td><%= link_to @book.title, book_path(@user.books) %></td>
            <td><%= @book.body %></td>
            <td class=<%="favorite-btn_" + @book.id.to_s %>>
　　　      <%= render "favorites/favorite-btn", book: @book %>
            <% if @user== current_user %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
            <% end %>
            <% if @user== current_user %>
            <td><%= link_to 'Destroy', book_path(@book.id), method: :delete,  data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
            <% end %>
            <td>コメント件数：<%= @book.book_comments.count %></td>
            <td>閲覧数：<%= @book.read_counts.count %></td>
        </tr>
      </table>
      
      <div>
      <table class='table'>
        <thead>
         <tr>
          <th></th>
         </thead>
         <tbody>
          <div class="index_comment">
            <%= render "book_comments/comment", book: @book %>
          </div>
        </tbody>
       </table>
        <td class="new-comment">
        <%= render "book_comments/form", book: @book, book_comment: @book_comment %></td>
      </div>
      
  </div>
 </div>
</div>
